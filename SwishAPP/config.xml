<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.dure0018.SwishAPP" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SwisshAPP</name>
    <description>
       MAD9014 Final 2016 By Jonathan Dure
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Jonathan Dure
    </author>
    <content src="index.html" />
    <preference name="SplashScreen" value="screen"/>
    <preference name="SplashScreenDelay" value="5000"/>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
    <splash src="platforms/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
    <splash src="platforms/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
    <splash src="platforms/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
    <splash src="platforms/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>

    <splash src="platforms/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
    <splash src="platforms/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
    <splash src="platforms/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
    <splash src="platforms/android/res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
       
     <icon src="platforms/android/res/mipmap-ldpi/icon.png" density="ldpi" />
        <icon src="platforms/android/res/mipmap-mdpi/icon.png" density="mdpi" />
        <icon src="platforms/android/res/mipmap-hdpi/icon.png" density="hdpi" />
        <icon src="platforms/android/res/mipmap-xhdpi/icon.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
